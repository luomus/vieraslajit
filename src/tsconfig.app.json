{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["es2017", "dom"],
    "outDir": "../out-tsc/app",
    "module": "esnext",
    "baseUrl": "",
    "paths": {
      "@observation-map/*": ["app/shared-modules/observation-map/*"],
      "@form/*": ["app/form/*"]
    }
  },
  "include": [
    "main.ts",
    "polyfills.ts",
    "../node_modules/laji-form/**/*.d.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
